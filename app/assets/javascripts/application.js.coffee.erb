window.myapp = angular
  .module 'myapp',['ui.compat','ui.router', 'ngResource'], ($stateProvider ,$locationProvider, $urlRouterProvider)->
    $stateProvider
      .state 'feeds',
        url: '/feeds'
        views:
          'side':
            controller: 'FeedsCnt'
            templateUrl: '/feeds.ng'
      .state 'feeds/:id',
        url: '/feeds/:id'
        views:
          'side':
            controller: 'FeedsCnt'
            templateUrl: '/feeds.ng'
          '':
            controller: 'FeedCnt'
            templateUrl: '/feeds/show.ng'
      .state 'projects',
        url: '/projects'
        views:
          '':
            controller: 'ProjectsCnt'
            templateUrl: '/projects.ng'
      .state 'projects/new',
        url: '/projects/new',
        views:
          'side':
            controller: 'ProjectsCnt'
            templateUrl: '/projects.ng'
          '':
            controller: 'ProjectFormCnt'
            templateUrl: '/projects/new.ng'
      .state 'projects/:id',
        url: '/projects/:id',
        views:
          'side':
            controller: 'ProjectsCnt'
            templateUrl: '/projects.ng'
          '':
            controller: 'ProjectCnt'
            templateUrl: '/projects/show.ng'
      .state 'projects/:id/edit',
        url: '/projects/:id/edit'
        views:
          'side':
            controller: 'ProjectsCnt'
            templateUrl: '/projects.ng'
          '':
            controller: 'ProjectFormCnt'
            templateUrl: '/projects/edit.ng'
      .state 'projects/:id/issues',
        url: '/projects/:id/issues'
        views:
          'side':
            controller: 'ProjectsCnt'
            templateUrl: '/projects.ng'
          '':
            controller: 'ProjectCnt'
            templateUrl: '/projects/show.ng'
          'pane':
            controller: 'IssuesCnt'
            templateUrl: '/issues.ng'

    $locationProvider.html5Mode(true)

  .run ($rootScope,   $state,   $stateParams)->
    $rootScope.$state = $state
    $rootScope.$stateParams = $stateParams
