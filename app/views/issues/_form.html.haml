= simple_form_for :issue,
  html: { class: 'form form-horizontal well',
    'ng-submit'=>'submit()',
    onsubmit: 'return false' } do |f|
  = f.error_notification
  = f.input :name, input_html: {'ng-model'=>'issue.name', class: 'xlarge'}
  = f.input :tracker, input_html: {'ng-model' => 'issue.tracker', class: 'xlarge'}
  = f.input :description, 'ng-model'=>'issue.description',
    as: :text,
    input_html: {'ng-model'=>'issue.description', style: 'height: 200px;', class: 'xlarge'}
  .form-actions
    = f.button :submit
    %a(href="/projects/{{project.id}}/issues") Cancel
